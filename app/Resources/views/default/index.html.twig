{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h2>Evaluations of:</h2>
                <h2>{{ user.username }}</h2>
            </div>
            <div class="col-sm-6">
                <h2>Please select the Evaluation to participate:</h2>
                {% for evaluation in evaluations %}
                    <button type="button" class="btn btn-default">{{ evaluation.name }}</button>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

